{
  "name": "eworks-backend",
  "version": "1.0.0",
  "description": "a web application for everything work",
  "main": "index.js",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon --exec babel-node ./index.js",
    "build": "yarn clean && babel src -d dist/src && babel index.js -d dist",
    "test": "cross-env NODE_ENV=test nyc mocha src/tests/index.js --recursive --exit",
    "prepublish": "yarn build",
    "clean": "rm -rf dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": "https://github.com/ajimae/eWorks-backend.git",
  "author": "ajimae <meeky.ae@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/register": "^7.4.4",
    "@istanbuljs/nyc-config-babel": "^2.1.1",
    "babel-plugin-istanbul": "^5.1.4",
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "mocha": "^6.1.4",
    "mocha-istanbul": "^0.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.9",
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/runtime": "^7.5.4",
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "istanbul": "^0.4.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.4.2"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
